{
  "packages": ["packages/*" ],
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "conventionalCommits": true,
      "yes": true,
      "ignoreChanges": ["**/__tests__/**", "**/stories/**", "**/*.md", "**/tsconfig.json"]
    },
    "version": {
      "conventionalCommits": true,
      "yes": true,
      "message": "chore(release): release",
      "ignoreChanges": ["**/__tests__/**", "**/stories/**", "**/*.md", "**/tsconfig.json"]
    } 
  }
}
